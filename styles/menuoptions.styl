@import "market-colors"
color1 = #007dd4
color2 = #fff
.menu-options
  margin 0
  padding 0

  ul
    list-style-type none
    margin 0
    padding 0
    text-align right

  li
    
    display inline-block
    margin 0 3px 0 0
    padding 0

    button
      background color1
      border 1px solid color1
      border-radius 2px
      color color2
      font-size 0.75em /* 12/16 */
      line-height 1.4em

    &.active button,
    button:hover
      background color2
      color color1

  &.markets 
    textcolor = #6a6a6a
    ul
      text-align left 
      margin-top 8px
      margin-bottom 10px
      margin-left: 10px
    li
      background-color color2
      margin-right 25px
      for color, i in markets
        &:nth-child({i+1})
          button:before
            background-color color
            

    
      
    button, li.active button
      background-color color2
      padding 0
      border none
      color textcolor
      vertical-align bottom
      &:hover
        color textcolor
        font-weight normal
      &:before 
        border-radius 2px
        margin-right 2px
        vertical-align middle
        content ''
        display inline-block
        height 13px
        width 13px
        margin-top -1px
      &:after
        content url(/images/checkbox.png)
        display inline-block
        height 13px
        width 13px
        margin-right 6px
        float left
        
    li.active button:after
      content url(/images/checkbox-checked.png)
      
        
      
      
       
      